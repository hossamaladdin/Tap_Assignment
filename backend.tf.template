# Backend Configuration Template
# Copy this to each environment directory and update the 'key' value

terraform {
  backend "s3" {
    bucket  = "tap-assignment-tfstate"
    key     = "ENV_NAME/terraform.tfstate"  # Replace ENV_NAME with actual environment
    region  = "us-east-1"
    encrypt = true

    # Optional: Add DynamoDB locking for team environments
    # dynamodb_table = "tap-assignment-terraform-locks"
  }
}
